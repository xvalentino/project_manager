<h1>Your Projects</h1>

<div class="container">
  <div class="collection">
    <% @boards.each do |board| %>
      <%= link_to board.title, board_path(board), class: "collection-item" %>
    <% end %>
  </div>

  <%= form_for @board do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.submit %>
  <% end %>
</div>
